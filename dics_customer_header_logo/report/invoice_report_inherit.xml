<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    invoice variable declare-->
    <template id="report_invoice_document_inherit_partner_logo" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='address']" position="before">
            <t t-set="is_from_invoice" t-value="true"/>
        </xpath>
    </template>

    <!--    wizard variable declare-->
    <template id="report_customer_statement_inherit_partner_logo"
              inherit_id="customer_statement_knk.report_customer_template">
        <xpath expr="//div[hasclass('page')]" position="before">
            <t t-set="is_from_customer_statement" t-value="true"/>
        </xpath>
    </template>


    <!--    layout external_layout_standard-->
    <template id="dics_header_logo_external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('col-3')]" position="replace">
            <div class="col-3 mb4">
                <t t-if="is_from_invoice">
                    <img t-if="o.partner_id.header_logo"
                         t-att-src="image_data_uri(o.partner_id.header_logo)"
                         style="max-height: 45px;" alt="Logo"/>
                </t>
                <t t-if="is_from_invoice and not o.partner_id.header_logo">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                         alt="Logo"/>
                </t>
                <t t-if="is_from_customer_statement">
                    <img t-if="o.header_logo"
                         t-att-src="image_data_uri(o.header_logo)"
                         style="max-height: 45px;" alt="Logo"/>
                </t>
                <t t-if="is_from_customer_statement and not o.header_logo">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                         alt="Logo"/>
                </t>
                <t t-if="not is_from_invoice and not is_from_customer_statement">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                         alt="Logo"/>
                </t>
            </div>
        </xpath>

    </template>

    <!--    layout external_layout_boxed-->
    <template id="dics_header_logo_external_layout_boxed" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <t t-if="is_from_invoice">
                            <img t-if="o.partner_id.header_logo"
                                 t-att-src="image_data_uri(o.partner_id.header_logo)"
                                 alt="Logo"/>
                        </t>
                        <t t-if="is_from_invoice and not o.partner_id.header_logo">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                        <t t-if="is_from_customer_statement">
                            <img t-if="o.header_logo"
                                 t-att-src="image_data_uri(o.header_logo)"
                                 alt="Logo"/>
                        </t>
                        <t t-if="is_from_customer_statement and not o.header_logo">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                        <t t-if="not is_from_invoice and not is_from_customer_statement">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                    </div>

                    <div class="col-6 text-right mb4">
                        <h4 class="mt0" t-field="company.report_header"/>
                        <div name="company_address" class="float-right mb4">
                            <span t-if="company.company_details" t-field="company.company_details"></span>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!--    layout external_layout_bold-->
    <template id="dics_header_logo_external_layout_bold" inherit_id="web.external_layout_bold">
        <xpath expr="//div[hasclass('o_clean_header')]" position="replace">
            <div class="o_clean_header">
                <div class="row">
                    <div class="col-6">
                        <t t-if="is_from_invoice">
                            <img t-if="o.partner_id.header_logo"
                                 t-att-src="image_data_uri(o.partner_id.header_logo)"
                                 alt="Logo"/>
                        </t>
                        <t t-if="is_from_invoice and not o.partner_id.header_logo">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                        <t t-if="is_from_customer_statement">
                            <img t-if="o.header_logo"
                                 t-att-src="image_data_uri(o.header_logo)"
                                 alt="Logo"/>
                        </t>
                        <t t-if="is_from_customer_statement and not o.header_logo">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                        <t t-if="not is_from_invoice and not is_from_customer_statement">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </t>
                    </div>
                    <div class="col-5 offset-1" name="company_address">
                        <ul class="list-unstyled">
                            <strong>
                                <li t-if="company.name">
                                    <span t-field="company.name"/>
                                </li>
                            </strong>
                            <li t-if="forced_vat or company.vat">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                                <span t-if="forced_vat" t-esc="forced_vat"/>
                                <span t-else="" t-field="company.vat"/>
                            </li>
                            <li t-if="company.phone">Tel:
                                <span class="o_force_ltr" t-field="company.phone"/>
                            </li>
                            <li t-if="company.email">
                                <span t-field="company.email"/>
                            </li>
                            <li t-if="company.website">
                                <span t-field="company.website"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!--    layout external_layout_striped-->
    <template id="dics_header_logo_external_layout_striped" inherit_id="web.external_layout_striped">
        <xpath expr="//div[hasclass('o_background_header')]" position="replace">
            <div class="o_background_header">
                <div class="float-right">
                    <h3 class="mt0 text-right" t-field="company.report_header"/>
                </div>
                <t t-if="is_from_invoice">
                    <img t-if="o.partner_id.header_logo" class="float-left"
                         t-att-src="image_data_uri(o.partner_id.header_logo)"
                         alt="Logo"/>
                </t>
                <t t-if="is_from_invoice and not o.partner_id.header_logo">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo"/>
                </t>
                <t t-if="is_from_customer_statement">
                    <img t-if="o.header_logo" class="float-left"
                         t-att-src="image_data_uri(o.header_logo)"
                         alt="Logo"/>
                </t>
                <t t-if="is_from_customer_statement and not o.header_logo">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo"/>
                </t>
                <t t-if="not is_from_invoice and not is_from_customer_statement">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo"/>
                </t>
                <div class="float-left company_address">
                    <span t-if="company.company_details" t-field="company.company_details"></span>
                </div>
                <div class="clearfix mb8"/>
            </div>
        </xpath>
    </template>

</odoo>