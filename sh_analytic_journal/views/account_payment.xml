<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_view" model="ir.ui.view">
        <field name="name">account.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="analytic_account_tag" groups="sh_analytic_journal.analytic_journal_group" />
                <field name="analytic_id" attrs="{'invisible':[('analytic_account_tag','=',False)],'required':[('analytic_account_tag','=',True)]}" />
                <field name="analytic_tag_ids" widget="many2many_tags" attrs="{'invisible':[('analytic_account_tag','=',False)],'required':[('analytic_account_tag','=',True)]}" />
            </field>
        </field>
    </record>
</odoo>
